<!-- Form Section -->
<form {{on "submit" (if this.isEdit this.updateTeamForm this.submitTeamForm) }}>
  <div class="form-group">
    <label for="team-name">Team Name</label>
    <input type="text" id="team-name" name="team_name" class="form-control" placeholder="Team Name" value={{@team.name}} disabled={{@team.isReadOnly}} >
  </div>
  <div class="form-group mt-2">
    <label for="description">Description</label>
    <textarea class="form-control" id="description" name="description" rows="3" placeholder="Description" disabled={{@team.isReadOnly}}>{{@team.description}}</textarea>
  </div>
  <div class="d-flex justify-content-end mt-3">
    <a href="/" type="button" class="btn {{if this.isNotReadOnly "btn-warning" "btn-primary"}} m-2">{{if this.isNotReadOnly "Cancel" "Kembali"}}</a>
    {{#if this.isNotReadOnly}}
      <button type="submit" class="btn btn-primary m-2">Submit</button>
    {{/if}}
  </div>
</form>